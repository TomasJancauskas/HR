{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
<h1>
    {{ 'location.index.title'|trans }}
</h1>

{% include 'AppBundle::flashes.html.twig' %}

<div class="panel panel-primary">
<div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-users"></i> {{ 'location.index.title'|trans }}</h3>
</div>
<table class="table table-hover table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>{{ 'location.label.title'|trans }}</th>
        <th>{{ 'location.label.employees'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for location in locations %}
        <tr>
            <td class="col-min">{{ location.id }}</td>
            <td>{{ location.title }}</td>
            <td>{{ location.employees|length }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div class="panel-footer">
    {{ pagination(locations) }}
</div>
</div>
{% endblock %}
